# Platform configuration file
# Format: 
#       sec:
#          - loc 
#          - cmd 
#          - arg
#
# Param:
#       sec: fab task 
#       loc: where fab execute task
#       cmd: body fab execute task
#       arg: cmd arguments

run: 
    - services
    - nameko run
    - guest:guest@localhost

test:
    - tests
    - py.test -v
    - test_%s.py

doc:
    - services
    - sphinx-apidoc
    - docs
